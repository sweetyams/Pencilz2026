{
  "enabled": true,
  "name": "Start Dev Servers",
  "description": "Starts both the Express API server (port 3001) and Vite dev server (port 5173) for local development",
  "version": "1",
  "when": {
    "type": "userTriggered"
  },
  "then": {
    "type": "askAgent",
    "prompt": "Start the API server with 'npm run server' and the Vite dev server with 'npm run dev' using controlBashProcess for both. Confirm when both servers are running successfully."
  }
}