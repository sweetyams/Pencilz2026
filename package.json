{
  "name": "pencilz-website",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && cp -r public/uploads dist/uploads",
    "preview": "vite preview",
    "server": "node server.js",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "migrate": "node scripts/migrate-to-redis.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:smoke": "vitest run src/test/smoke.test.jsx",
    "validate": "npm run test:smoke && npm run build",
    "precommit": "npm run validate"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@vercel/kv": "^3.0.0",
    "dotenv": "^17.3.1",
    "framer-motion": "^11.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.50.0",
    "react-router-dom": "^6.22.0",
    "redis": "^5.11.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsdom": "^28.1.0",
    "multer": "^1.4.5-lts.1",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "vite": "^5.1.0",
    "vitest": "^4.0.18"
  }
}
